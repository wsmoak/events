<h1><%= pluralize(@events.size, "Event")%></h1>

<% @events.each do |event| %>
  <article>
    <header>
    <%= image_for(event) %>
      <h2><%= link_to event.name, event %></h2>
      <h3><%= pluralize(event.capacity, 'spot')%></h3>
      <!-- same as: <h2><%= link_to( event.name, event_path(event.id) ) %></h2> -->
    </header>
    <p><%= truncate(event.description, length: 25, separator: ' ') %></p>
    <table>
      <tr>
        <th>When:</th>
        <td><%= event.starts_at %></td>
      </tr>
      <tr>
        <th>Where:</th>
        <td><%= event.location %></td>
      </tr>
      <tr>
        <th>Price:</th>
        <td><%= format_price(event) %></td>
       </tr>
    </table>
  </article>
<% end %>

